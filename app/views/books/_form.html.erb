<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container" id="form-whole">

  
    <div class="form-group top-three">
      <%= form.label :isbn, "ISBN" %>
      <%= form.text_field :isbn, id: :book_isbn, :value => google_isbn, placeholder: "Either 10 or 13 digits. For 9 digit SBNs, just add a 0 to the front", class: "form-control" %>
    </div>

    <div class="form-group top-three">
      <%= form.label :title %>
      <%= form.text_field :title, id: :book_title, :value => google_title, placeholder: "Enter the title", class: "form-control"%>
    </div>

    <div class="form-group top-three">
      <%= form.label :author %>
      <%= form.text_field :author, id: :book_author, :value => google_authors, placeholder: "Enter the Author's name (Last Name, First Name)", class: "form-control" %>
    </div>
    



    <div class="publisher-couple">
      <div class="form-group" id="publisher">
        <%= form.label :publisher %>
        <%= form.text_field :publisher, id: :book_publisher, :value => google_publisher, placeholder: "Enter the publisher", class: "form-control" %>
      </div>

      <div class="form-group" id="date">
        <%= form.label :publication_date, "Year Published" %>
        <%= form.text_field :publication_date, id: :book_publication_date, :value => google_year, discard_day: :true, discard_month: :true, class: "form-control" %>
      </div>
    </div>
  
    
    <div class="genre_format">
      <div class="form-group" id="genre">
        <%= form.select :genre_id, genre_finder, {include_blank: "Pick Genre" } %>
         <%= link_to "Remove or Add a Genre", genres_path %>
      </div>
     
      <div class="form-group" id="format">
        <%= form.label :format %>
        <%= form.text_field :format, id: :book_format, class: "form-control" %>
      </div>
    </div>
    

    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location, id: :book_location %>
    </div>

    <div class="field">
      <%= form.label :note %>
      <%= form.text_area :note, id: :book_note %>
    </div>

    <div class="field">
      <%= form.label :collectible %>
      <%= form.check_box :collectible, id: :book_collectible %>
    </div>


    <div class="form-group">
      <strong>Upload Book Image: </strong>
      <%= form.file_field :image %>
    </div>

    
    <% if false %> <!-- commented out below -->
    <div class="form-group">
      <%= form.label :tags, "Tags" %>
      <%= form.text_area :tags, id: :book_tags %>
    </div>
    <% end %> <!-- commented out above -->

    <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price, id: :book_price %>
    </div>


    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
