<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Year</th>
      <th>Format</th>
      <th>Location</th>
      <th>Price</th>
      <th>Genre</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publication_date.year %></td>
        <td><%= book.format %></td>
        <td><%= book.location %></td>
        <td><%= book.price %></td>
        <td><% if Genre.find_by(id:book.genre_id) %>
          <%= Genre.find_by(id:book.genre_id).name %>
            <% else %>
            <%= nil %>
            <% end %>
          </td>
        <td><%= book.note %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
